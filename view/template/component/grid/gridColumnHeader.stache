<th class="js_grid_column js_grid_column_{{name}} cell_{{name}} {{css.join(' ')}}">

{{#if(columnModel.sortable)}}
    <a>
{{/if}}

{{#switch(typeof content)}}
    {{#case("function")}}
        {{>label}}
    {{/case}}
    {{#default()}}
        {{label}}
    {{/default}}
{{/switch}}

{{#if(sortable)}}
    </a>
{{/if}}

</th>
